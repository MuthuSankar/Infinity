<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stats_en">

    <TextView
        android:layout_width="78dp"
        android:layout_height="93dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/usage1"
        android:background="@drawable/box"
        android:text="12 Min"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/usage2"
        android:background="@drawable/box"
        android:text="100 Msg"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/usage3"
        android:background="@drawable/box"
        android:text="40 GB"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trans"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Latest Transactions"/>
    <TextView
        android:id="@+id/custom_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="390dp"
        android:textSize="16dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="10.10.2018     20€       Top Up
23.09.2018    -10€       Activated New Plan
01.09.2018     20€       Top Up
25.08.2018    - 5€        Activated Weekly Plan
10.08.2018     10€       Top Up
"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@drawable/bnv_tab_item_foreground"
        app:itemTextColor="@drawable/bnv_tab_item_foreground"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
